{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "esnext",
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "es6",
        "allowJs": true,
        "moduleResolution": "node",
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "removeComments": true
    },
    "include": ["./src/**/*"],

    "exclude": ["./dist", "node_modules"]
}
